@model IEnumerable<RSSolution.ViewModels.Catalog.Contacts.ContactVm>
@{ 
    ViewData["Title"] = "Home Page"; 
 }
@section Scripts{
    <script>setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);</script>
}
<div id="page-wrapper">
    <div class="main-page">
        <center><h3 class="title1">Contact</h3></center>
        <div class="grid-bottom widget-shadow">
            <form asp-action="Contact" method="post">
                <div class="form-group">
                    <label class="control-label">From Date</label>
                    <input type="date" id="fromdate" name="fromdate" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">To Date</label>
                    <input type="date" id="todate" name="todate" class="form-control" />
                </div>
                <center>
                    <button type="submit" class="btn btn-primary">Find</button>
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-primary">Reset</a>
                </center>              
            </form>
            <hr />
            <div class="row">
                @if (ViewBag.Success != null)
                {
                    <div  id="msgAlert" class="alert alert-danger" role="alert" style="text-align:center;width: 380px; margin-left: auto; margin-right: auto;" >
                        <h4 style="font-family:'Pacifico', cursive">@ViewBag.Success</h4>
                    </div>
                 }
            </div>
            <table class="table table-bordered table-striped no-margin grd_tble">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactDate)
                            </td>

                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />

        </div>
    </div>
</div>
